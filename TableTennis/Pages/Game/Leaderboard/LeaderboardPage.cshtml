@page
@model TableTennis.Pages.Game.Leaderboard.LeaderboardPageModel
@{
    ViewData["Title"] = "Topp 10 Leaderboard";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    @if (Model.LeaderboardEntries == null || !Model.LeaderboardEntries.Any())
    {
        <p class="text-center">Ingen data tillgänglig för leaderboard ännu.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th style="width: 10%;">Rank</th>
                        <th>Spelare</th>
                        <th style="width: 15%;" class="text-end">Antal Vinster</th>
                        <th style="width: 15%;" class="text-end">Spelade Matcher</th>
                        <th style="width: 20%;" class="text-end">Vinstprocent</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model.LeaderboardEntries)
                    {
                        <tr>
                            <td>@entry.Rank</td>
                            <td>@entry.PlayerFullName</td>
                            <td class="text-end">@entry.Wins</td>
                            <td class="text-end">@entry.TotalGamesPlayed</td>
                            <td class="text-end">@entry.WinPercentage.ToString("P1")</td> @* P1 = Procent med 1 decimal *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>