    <header class="site-header">
        <div class="header-top-row">
            <div class="logo-title-group">
                <a href="https://www.angby.com/" target="_blank" class="logo-link">
                    <img src="https://static.wixstatic.com/media/47d5b4_dd3b09af552847cbbe7e0e351451ae16~mv2.gif"
                         alt="Ängbylogga"
                         class="logo-image" />
                </a>
                <h1 class="site-title">
                    <a href="https://www.angby.com/" target="_blank">ÄNGBY SPORTKLUBB</a>
                </h1>
            </div>

            <div class="social-icons">
                <ul>
                    <li><a href="https://www.youtube.com/channel/UCXhtPtV6_klWJF37c5MI0FA" target="_blank" aria-label="Youtube"><img src="/img/yt.png" alt="Youtube" /></a></li>
                    <li><a href="https://solidsport.com/angbysk" target="_blank" aria-label="Solidsport"><img src="/img/boll.png" alt="Solidsport" /></a></li>
                    <li><a href="https://www.instagram.com/angbysk/" target="_blank" aria-label="Instagram"><img src="/img/insta.png" alt="Instagram" /></a></li>
                    <li><a href="https://www.facebook.com/angbysk" target="_blank" aria-label="Facebook"><img src="/img/fb.png" alt="Facebook" /></a></li>
                </ul>
            </div>
        </div>

        <nav class="main-navigation" aria-label="Huvudmeny">
            <ul>
                <li class="active"><a href="/Index">START</a></li>
                <li><a asp-page="/Game/Create/Index">Starta Match</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-page="/Game/ReadAll/Index">Visa Historik</a></li>
                        <li><a asp-page="/Game/Leaderboard/LeaderboardPage">Ledartavlan</a></li>
                        <li><a asp-page="/Game/Statistics/StatisticsPage">Spelarstatistik</a></li>
                    }
                    <li class="logout"><partial name="_LoginPartial" /></li>
                }
                else
                {
                    <li><a asp-area="Identity" asp-page="/Account/Login">Logga in</a></li>
                }
            </ul>
        </nav>
    </header>

    <div class="container">
        @if (TempData["StatusMessage"] != null)
        {
            <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 9999;">
                <div class="toast align-items-center text-bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            @TempData["StatusMessage"]
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 9999;">
                <div class="toast align-items-center text-bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            @TempData["ErrorMessage"]
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()

        </main>
    </div>

    @* <footer class="border-top footer text-muted"> *@
    @*     <div class="container"> *@
    @*         &copy; 2025 - TableTennis - <a asp-area="" asp-page="/Privacy">Privacy</a> *@
    @*     </div> *@
    @* </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toastElements = document.querySelectorAll('.toast');
            toastElements.forEach(toastEl => {
                const toast = new bootstrap.Toast(toastEl, {
                    delay: 4000 // 4 sekunder
                });
                toast.show();
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
